<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Buckwheat" parent="Theme.Material3.Light.NoActionBar">
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Buckwheat.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Buckwheat.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Buckwheat.LargeComponent</item>

        <item name="textAppearanceDisplayLarge">@style/TextAppearance.Buckwheat.DisplayLarge</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.Buckwheat.TitleLarge</item>

        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Buckwheat.BottomSheetDialog</item>
    </style>

    <style name="Theme.Buckwheat" parent="Base.Theme.Buckwheat" />

    <style name="Widget.Buckwheat.Button.Keyboard" parent="Widget.Material3.Button.TonalButton">
        <item name="android:textSize">40sp</item>
        <item name="android:textAppearance">@style/TextAppearance.Buckwheat.TitleLarge</item>
        <item name="android:insetTop">0dp</item>
    </style>

    <style name="Widget.Buckwheat.Button.Keyboard.IconOnly" parent="Widget.Material3.Button.TonalButton">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">32sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="Widget.Buckwheat.Button.Keyboard.Light" parent="Widget.Material3.Button.TonalButton">
        <item name="android:textSize">40sp</item>
        <item name="android:textAppearance">@style/TextAppearance.Buckwheat.TitleLarge</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/material_dynamic_neutral95</item>
    </style>

    <style name="ShapeAppearance.Buckwheat.EditorCard" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">48dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>

    <style name="ShapeAppearance.Buckwheat.BottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">48dp</item>
    </style>

    <style name="Widget.Buckwheat.EditorCard" parent="@style/Widget.Material3.CardView.Filled">
        <item name="shapeAppearance">@style/ShapeAppearance.Buckwheat.EditorCard</item>
        <item name="cardBackgroundColor">@color/material_dynamic_neutral95</item>
    </style>

    <style name="ThemeOverlay.Buckwheat.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Theme.Buckwheat.BottomSheetDialog</item>
    </style>

    <style name="Theme.Buckwheat.BottomSheetDialog" parent="Widget.Material3.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.Buckwheat.BottomSheetDialog</item>
    </style>

    <style name="Widget.Buckwheat.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Buckwheat.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.Buckwheat.TitleLarge</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.Material3.TitleMedium</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ThemeOverlay.Buckwheat.Toolbar" parent="">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
